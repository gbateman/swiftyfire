doctype html
html(lang='en')
  head
    link(rel='stylesheet', href='style.css')
    link(rel='stylesheet', href='codemirror.css')
    link(rel='stylesheet', href='swiftyfire.css')
    script(src='codemirror.js')
  body(onload='loadTextArea()')
    h1 &#128293; SwiftyFire
    #main_area
      textarea#text_area
    button submit
    script.
      let loadTextArea = function() {
        var textArea = document.getElementById('text_area');
        var editor = CodeMirror.fromTextArea(textArea, {
          lineNumbers: true,
          theme: "swiftyfire"
        });
      };
